{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "Projeto para criar uma API utilizando NodeJs",
  "main": "index.js",
  "scripts": {
    "test": "jest --silent --noStackTrace --passWithNoTests",
    "test:unit": "npm test -- --watch",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --ignore-unknown",
      "npm run test:staged"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5"
  }
}
